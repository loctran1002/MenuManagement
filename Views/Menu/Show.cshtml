@{
    ViewData["Title"] = "Menu Page";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menu Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/menu.css" asp-append-version="true" />
</head>

<body>
    <div class="container">
        <div class="menu-container">
            @for (var i = 1; i <= 3; i++)
            {
                <h4 id="menu-@i" class="hover-span font-weight-bold">Menu @i<span class="button-container"></span></h4>
            }
        </div>
    </div>

    <div class="d-none">
        <div class="button-content">
            <form action="/Create" method="post">
                <button type="submit" class="btn btn-success">Create</button>
                <button type="submit" class="btn btn-primary">Edit</button>
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>

    <script src="~/js/menu.js" asp-append-version="true"></script>

</body>

</html>
